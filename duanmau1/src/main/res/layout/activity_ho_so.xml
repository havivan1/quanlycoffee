<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HoSoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#D35DACF1"
        android:paddingTop="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên người dùng" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTenNguoiDung"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtMatKhau" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtDoiMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thaydoi"
            android:textColor="#158DED"
            android:gravity="end" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmail" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtDoiEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thaydoi"
            android:textColor="#158DED"
            android:gravity="end" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtSDT" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtDoiSDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thaydoi"
            android:textColor="#158DED"
            android:gravity="end" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDiaChi" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtDoiDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thaydoi"
                android:textColor="#158DED" />

            <TextView
                android:id="@+id/txtXoaDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/xoa"
                android:layout_marginLeft="20dp"
                android:textColor="#158DED" />

            <TextView
                android:id="@+id/txtThemDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/them"
                android:textColor="#158DED"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThayDoiThongTin"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:layout_gravity="center"
        android:background="@drawable/custom_button" />

</LinearLayout>